                android:layout_height="60dp"
                android:layout_weight="3"
                android:hint="Cargador"
                android:textAlignment="center"></EditText>

            <EditText
                android:id="@+id/txtHoras1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:hint="78 hrs"
                android:inputType="numberDecimal"
                android:textAlignment="center"></EditText>
        </LinearLayout>

